<?xml version="1.0" encoding="utf-8"?>
<registry xmlns:i18n="http://xml.zope.org/namespaces/i18n"
          i18n:domain="senaite.referral">

  <!-- ================= CONTROL PANEL (sin cambios) ================= -->
  <records
      interface="senaite.referral.browser.controlpanel.IReferralControlPanel"
      prefix="senaite.referral" />

  <!-- ================= RESOURCES: infolabsa-css ================= -->
  <!-- Solo CSS (no JS) -->
  <record name="plone.resources/infolabsa-css.css">
    <value>
      <element>++plone++senaite.referral.static/infolabsa.css</element>
    </value>
  </record>
  <!-- deps vacío (opcional) -->
  <record name="plone.resources/infolabsa-css.deps">
    <value />
  </record>

  <!-- ================= RESOURCES: infolabsa-assets ================= -->
  <!-- CSS -->
  <record name="plone.resources/infolabsa-assets.css">
    <value>
      <element>++plone++senaite.referral.static/infolabsa.css</element>
    </value>
  </record>
  <!-- JS -->
  <record name="plone.resources/infolabsa-assets.js">
    <value>
      <element>++plone++senaite.referral.static/infolabsa.js</element>
    </value>
  </record>
  <!-- deps vacío (opcional) -->
  <record name="plone.resources/infolabsa-assets.deps">
    <value />
  </record>

  <!-- ================= BUNDLE: plone-legacy (opcional) ================= -->
  <record name="plone.bundles/plone-legacy.resources">
    <value purge="false">
      <element>infolabsa-css</element>
      <element>infolabsa-assets</element>
    </value>
  </record>
  <record name="plone.bundles/plone-legacy.enabled">
    <value>True</value>
  </record>
  <record name="plone.bundles/plone-legacy.compile">
    <value>False</value>
  </record>

  <!-- ================= BUNDLE: senaite.core (recomendado) ================= -->
  <record name="plone.bundles/senaite.core.resources">
    <value purge="false">
      <element>infolabsa-css</element>
      <element>infolabsa-assets</element>
    </value>
  </record>
  <record name="plone.bundles/senaite.core.enabled">
    <value>True</value>
  </record>
  <record name="plone.bundles/senaite.core.compile">
    <value>False</value>
  </record>

</registry>
